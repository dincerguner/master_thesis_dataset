<?xml version="1.0"?>
<project default="umldoclet" name="UmlDoclet">

  <property name="umldoclet.cent.dir" value="${cents.dir}/umldoclet.${cent.dir.suffix}"/> 
 
  <target  name="doclet"
           description="generate-uml">
    
    <javadoc packagenames="${xgump.module.project.package}.*"
             sourcepath="${xlayout.build.java.dir}"
             destdir="${xlayout.build.documentation.javadocs.dir}"
             failonerror="true">
             
<!--
doclet.usage=Provided by UMLDoclet doclet:\n\
  -d <directory>               Destination directory for output files\n\
  -windowtitle <text>          Browser window title for the documenation\n\
  -docencoding <name>          Output encoding name\n\
  -member <abcde>              member view option (default[22202])\n\
        \t                     a : pivot class\n\
        \t                     b : sub class\n\
        \t                     c : super class\n\
        \t                     d : inner class\n\
        \t                     e : outer class\n\
        \t                     each a - e, select a number from follows\n\
        \t                     0 : disable member\n\
        \t                     1 : simple\n\
        \t                     2 : details\n\
        \t                     3 : details with package name\n\
  -interfacecolor <rrggbb>     interface background color\n\
  -classcolor <rrggbb>         class background color\n\
  -abstractclasscolor <rrggbb> abstract class background color\n\
  -finalclasscolor <rrggbb>    final class background color\n\
  -tag <name>                  validate tag name
doclet.illegal_member=member option can't recognize
doclet.No_Public_Classes_To_Document=No public or protected classes found to document.
-->             
      <doclet name="JP.co.esm.caddies.doclets.UMLDoclet"
              path="${cents.dir}/umldoclet.${cent.dir.suffix}/${cent.lib.dir.name}/UMLDoclet.jar" >
<!--
 -member <abcde>
   members (attributes and methods) showing type
   setting option by a 5 beams number, pivot, sub, super, inner, outer
   select number each a beam
   0. members are disable
   1. members are enable, parameters are disable
   2. members are enable, parameters are enable
   3. class name with package
   default is 22202
-->   
        <param name="-member" value="33333"/>
        <param name="-windowtitle" value="${xgump.project.name}"/>
        <param name="-interfacecolor" value="4261ff"/>
        <param name="-classcolor" value="fff742"/>
        <param name="-abstractclasscolor" value="ff4b42"/>
        <param name="-finalclasscolor" value="d3f484"/>
     </doclet>
    </javadoc>

  </target>  

</project>  